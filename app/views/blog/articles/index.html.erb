<main id="content" role="main">
  <!-- Hero Section -->
  <div class="container space-top-3 space-top-lg-4 space-bottom-1 space-bottom-md-2">
    <div class="w-md-80 w-lg-75 text-center mt-7 mt-xl-0 mx-md-auto">
      <h1 class="display-4">Le blog des artistes entrepreneurs</h1>
      <p class="lead">Tous nos conseils et article sur l'entrepreneuriat artistique.</p>
    </div>
  </div>
  <!-- End Hero Section -->

  <!-- Blog Card Section -->
  <div class="blog container space-top-md-2 space-bottom-2 space-bottom-lg-3">
    <% featured_article = @articles.first %>
    <% featured_image = featured_article.feature_image.nil? ? featured_article.hero_image.image_url : featured_article.feature_image.image_url %>
    <!-- Blog Card -->
    <%= link_to blog_article_path(featured_article.slug) do %>
      <article class="card mb-11">
        <div class="row no-gutters">
          <div class="col-lg-8">
            <div class="position-relative overflow-hidden">
              <img class="card-img" src="<%= featured_image %>" alt="Image Description">
              <figure class="d-none d-lg-block">
                <svg class="ie-curved-x position-absolute top-0 right-0 bottom-0 mr-n1" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 100.1 1920" height="101%">
                  <path fill="#fff" d="M0,1920c0,0,93.4-934.4,0-1920h100.1v1920H0z"/>
                </svg>
              </figure>
              <figure class="d-lg-none mb-n1">
                <svg class="ie-curved-y position-absolute right-0 bottom-0 left-0" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 1920 100.1">
                  <path fill="#fff" d="M0,0c0,0,934.4,93.4,1920,0v100.1H0L0,0z"/>
                </svg>
              </figure>
            </div>
          </div>

          <div class="col-lg-4">
            <div class="card-body d-flex flex-column h-100 p-4 p-lg-5">
              <h2 class="text-inherit"><%= featured_article.title %></h2>
              <p class="description text-lh-lg mt-2"><%= featured_article.description %></p>
              <div class="media align-items-center mt-3 mt-xl-auto">
                <div class="avatar-group">
                  <div class="avatar avatar-xs avatar-circle" href="#" data-toggle="tooltip" data-placement="top" title="<%= featured_article.author.name %>">
                    <img class="avatar-img" src="<%= featured_article.author.image.url %>" alt="Auteur : <%= featured_article.author.name %>">
                  </div>
                </div>
                <div class="media-body d-flex justify-content-end text-muted font-size-1 ml-2">
                  <%= I18n.l(featured_article.publish_date, format: :medium_date) %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </article>
    <% end %>
    <!-- End Blog Card -->

    <!-- Title -->
    <div class="row mb-5">
      <div class="col-6">
        <h2 class="h3 mb-0">Tous nos articles</h2>
      </div>
    </div>
    <!-- End Title -->

    <div class="row mb-3">
      <% @articles.reject { |a| a == featured_article }.each do |article| %>
        <div class="col-sm-6 col-lg-4 mb-3 mb-sm-8">
          <!-- Blog Card -->
          <%= link_to blog_article_path(article.slug) do %>
            <article class="card h-100">
              <div class="card-img-top position-relative">
                <img class="card-img-top" src="<%= article.hero_image.url %>" alt="<%= article.hero_image.title %>">
                <figure class="ie-curved-y position-absolute right-0 bottom-0 left-0 mb-n1">
                  <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 1920 100.1">
                    <path fill="#fff" d="M0,0c0,0,934.4,93.4,1920,0v100.1H0L0,0z"/>
                  </svg>
                </figure>
              </div>

              <div class="card-body">
                <h3 class="text-inherit"><%= article.title %></h3>
                <p class="description"><%= article.description %></p>
              </div>

              <div class="card-footer border-0 pt-0">
                <div class="media align-items-center">
                  <div class="avatar-group">
                    <div class="avatar avatar-xs avatar-circle" href="#" data-toggle="tooltip" data-placement="top" title="<%= article.author.name %>">
                      <img class="avatar-img" src="<%= article.author.image.url %>" alt="Auteur : <%= article.author.name %>">
                    </div>
                  </div>
                  <div class="media-body d-flex justify-content-end text-muted font-size-1 ml-2">
                    <%= I18n.l(article.publish_date, format: :medium_date) %>
                  </div>
                </div>
              </div>
            </article>
          <% end %>
          <!-- End Blog Card -->
        </div>
      <% end %>

    </div>
  </div>
  <!-- End Blog Card Section -->
</main>